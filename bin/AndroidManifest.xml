<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.successfactors.library"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.successfactors.library.activity.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.HomeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.BrowserActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.BorrowActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.RecommendActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.ReservationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.RecommendDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.BookDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.RecentBorrowAndBooking"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.QRCodeCameraRecommendActivity"
            android:label="@string/title_activity_qrcode_camera_recommend"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.successfactors.library.activity.CaptureActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>
    </application>

</manifest>