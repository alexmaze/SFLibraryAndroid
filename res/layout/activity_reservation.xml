<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout android:id= "@+id/top_layout_reserve" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:text="@string/home_reserve" 
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/black"
        />
    </RelativeLayout>
    
    <ListView android:id="@+id/reserveLv" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_below="@id/top_layout_reserve"
        
        ></ListView>
    

</RelativeLayout>