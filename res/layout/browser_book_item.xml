<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="9dip"
    android:paddingBottom="15dip"
    android:layout_weight="3"
    android:orientation="horizontal">
   <LinearLayout  
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/browserBookImageA"
        android:layout_width="90dip"
        android:layout_height="110dip"
        android:layout_gravity="center"
        android:layout_marginLeft="3dip"/>
    	<TextView
        android:id="@+id/browserBookNameA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:lines="1"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    </LinearLayout>
    
     <LinearLayout  
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/browserBookImageB"
        android:layout_width="90dip"
        android:layout_height="110dip"
        android:layout_gravity="center"
        android:layout_marginLeft="3dip"/>
    	<TextView
        android:id="@+id/browserBookNameB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:lines="1"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    
    </LinearLayout>
    
      <LinearLayout  
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/browserBookImageC"
        android:layout_width="90dip"
        android:layout_height="110dip"
        android:layout_gravity="center"
        android:layout_marginLeft="3dip"/>
    	<TextView
        android:id="@+id/browserBookNameC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:lines="1"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    
  
    </LinearLayout>
</LinearLayout>