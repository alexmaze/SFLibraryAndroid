<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_round_corner"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recommendBookImage"
            android:layout_width="88dp"
            android:layout_height="120dp"
            android:contentDescription="@string/hello_world"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recommendBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:lines="1"
                android:layout_marginBottom="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recommendBookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recommendRecUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp" >

                <ImageView
                    android:id="@+id/recommendBookHot1"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/burn" />

                <ImageView
                    android:id="@+id/recommendBookHot2"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/burn" />

                <ImageView
                    android:id="@+id/recommendBookHot3"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/burn" />

                <ImageView
                    android:id="@+id/recommendBookHot4"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/burn" />

                <ImageView
                    android:id="@+id/recommendBookHot5"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/burn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>